# Example Legion Environment Variables
# Copy this file to .env and replace with your actual secrets

# Environment Section
ENVIRONMENT=development
PROJECT_NAME=legion

# Backend Configuration Section

SERVER_PORT=8080

# Database Connection
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/legion_db
SPRING_DATASOURCE_USERNAME=legion_admin
SPRING_DATASOURCE_PASSWORD=CHANGE_ME_MATE

# JPA Settings
SPRING_JPA_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_FORMAT_SQL=false

LEGION_JWT_SECRET=CHANGE_ME_MATE_MUST_BE_256_BITS_MINIMUM_MGIHT_AS_WELL_USE_GENERATION_SCRIPT
LEGION_JWT_EXPIRATION=7889400000

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000


# Frontend Configuration Section

VITE_API_BASE_URL=http://localhost:8080/api
VITE_ENV=development


# Database Configuration Section
POSTGRES_USER=legion_admin
POSTGRES_PASSWORD=CHANGE_ME_MATE
POSTGRES_DB=legion_db